			a(href="news-market.html").button.button--transparent.news__button.news__button--prev
				+icon('icon-arrow-right', 'news__icon', '16', '16')
				span Все новости
			a(href="#").button.news__button
				span Следующая новость
				+icon('icon-arrow-right', 'news__icon', '16', '16')


